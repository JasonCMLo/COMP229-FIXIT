<div class="container">
  <div class="row AddTicketContent">
    <div class="col-xs-12">
      <h2 class="h2 form-title">Incident report form</h2>
    </div>
    <form class = "form" method="post">
      <div class="col-xs-12 inputs">
        <input
          type="text"
          class="form-control"
          placeholder="First and last name"
          aria-label="fullname"
          aria-describedby="basic-addon1"
          value="<%= incidents.customerInformation %>"
        />
        <textarea
          class="form-control"
          rows="8"
          id="comment"
          placeholder="Please describe the details"
          value="<%= incidents.description %>"
        ></textarea>
        <textarea
          class="form-control"
          rows="8"
          id="comment"
          placeholder="Describe the complete incident in chronological order"
          value="<%= incidents.narrative %>"
        ></textarea>
        <p>Incident Priority: </p>
           <input type="radio" id="high" name="priority" value="<%= incidents.priority %>">
              <label for="high">High</label><br>
           <input type="radio" id="medium" name="priority" value="<%= incidents.priority %>">
              <label for="medium">Medium</label><br>
           <input type="radio" id="low" name="priority" value="<%= incidents.priority %>">
              <label for="low">Low</label>
        <input
          placeholder="Ticket Date"
          class="form-control"
          type="text"
          onfocus="(this.type='date')"
          value=" <%= incidents.recordNumber %>"
        />
      </div>

      <div class="col-xs-12 buttons">
        <div class="row g-2">
          <div class="col-xs-4 cancel">
            <button type="button" class="btn2">Cancel</button>
          </div>
          <div class="col-xs-8 submit">
            <button type="submit" class="btn">Submit</button>
          </div>
        </div>
      </div>
    </form>
  </div>
</div>
