<div class="container">
  <div class="col-md-8 offset-md-2">
    <form method="POST" id="registerForm" novalidate>
      <div class="form-group">
        <br />
        <br />
        <h2>Sign-up for a Fixit Account</h2>
        <p>
          Please create your account with a corporate email address for your
          company system to recognize you
        </p>
        <br />
        <p>All fields are required unless stated otherwise</p>
        <input
          class="form-control form-control-lg"
          type="text"
          id="firstName"
          name="firstName"
          required
          value=""
          placeholder="First Name"
        />
      </div>
      <div class="form-group">
        <input
          class="form-control form-control-lg"
          type="text"
          id="lastName"
          name="lastName"
          required
          value=""
          placeholder="Last Name"
        />
      </div>

      <div class="form-group">
        <input
          class="form-control form-control-lg"
          type="text"
          id=" emailAddress"
          name=" emailAddress"
          required
          value=""
          placeholder="Company Email address"
        />
      </div>
      <div class="form-group">
        <input
          type="text"
          class="form-control form-control-lg"
          id="username"
          name="username"
          required
          value=""
          placeholder="Username"
        />
      </div>
      <div class="form-group">
        <input
          class="form-control form-control-lg"
          type="password"
          id="password"
          name="password"
          required
          value=""
          placeholder="Password"
        />
      </div>
      <div class="form-group">
        <input
          class="form-control form-control-lg"
          type="text"
          id="empId"
          name="empId"
          value=""
          placeholder="Employee ID"
        />
      </div>
      <div class="form-group">
        <!-- <input
          class="form-check-input"
          type="checkbox"
          id="adminUser"
          name="adminUser"
          value="true"
        /> -->
        <input type="checkbox" name="box2" />

        <label class="form-check-label" for="adminUser">
          Select if creating an Administration user</label
        >
      </div>
      <div class="btn-group">
        <button type="button" class="btn2" onclick="location.href = '/login';">
          Cancel
        </button>
      </div>
      <div class="btn-group">
        <button type="submit" class="btn">Create Account</button>
      </div>
    </form>
    <br />
  </div>
</div>
