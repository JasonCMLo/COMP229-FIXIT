<div class="container">
  <div class="row ContactUsContent">
    <div class="col-xs-12">
      <h2 class="h2 form-title">Contact US</h2>
    </div>
    <form action="/login" method="post">
      <div class="col-xs-12 inputs">
        <input
          type="text"
          class="form-control"
          placeholder="Full name"
          required=""
          aria-label="fullname"
          aria-describedby="basic-addon1"
        />
        <input
          type="email"
          class="form-control"
          placeholder="E-mail"
          required=""
          aria-label="email"
          aria-describedby="basic-addon1"
        />
        <textarea
          class="form-control"
          rows="8"
          id="comment"
          required=""
          placeholder="Please describe the details"
        ></textarea>
      </div>

      <div class="col-xs-12 buttons">
        <div class="row g-2">
          <div class="col-xs-12 cancel">
            <button type="submit" class="btn">Send</button>
          </div>
        </div>
      </div>
    </form>
  </div>
</div>
