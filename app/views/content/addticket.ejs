<div class="container">
  <div class="row AddTicketContent">
    <div class="col-xs-12">
      <h2 class="h2 form-title">Incident report form</h2>
    </div>
    <form class="form" method="POST">
      <div class="col-xs-12 inputs">
        <input 
          type="text"
          hidden
          name="incidentID"
          value="<%= incidents._id %>"/>
        <input
          type="text"
          class="form-control"
          placeholder="First and last name"
          aria-label="fullname"
          aria-describedby="basic-addon1"
          value="<%= incidents.customerInformation %>"
          name="customerInformation"
        />
        <textarea
          class="form-control"
          rows="8"
          id="details"
          placeholder="Please provide the incident short description"
          name="description"><%= incidents.description %></textarea>
          <textarea
          class="form-control"
          rows="8"
          id="describe"
          placeholder="Describe the complete incident in chronological order"
          name="narrative"
        ><%= incidents.narrative %></textarea>
        <div class="priority">
          <p class="priority-title">Incident Priority:</p>
          <div class="checks">
            <div class="form-check">
              <% if (incidents.priority == "low") { %>
                <input class="form-check-input" type="radio" name="priority"
                id="flexRadioDefault1" value="low" checked >
                <label class="form-check-label" for="flexRadioDefault1">
                  Low
                </label>
              <% } else { %>
                <input class="form-check-input" type="radio" name="priority"
                id="flexRadioDefault1" value="low" >
                <label class="form-check-label" for="flexRadioDefault1">
                  Low
                </label>
              <% } %>
              
            </div>
            <div class="form-check">
              <% if (incidents.priority == "medium") { %>
                <input class="form-check-input" type="radio" name="priority"
                id="flexRadioDefault1" value="low" checked >
                <label class="form-check-label" for="flexRadioDefault1">
                  Medium
                </label>
              <% } else { %>
                <input class="form-check-input" type="radio" name="priority"
                id="flexRadioDefault1" value="medium" >
                <label class="form-check-label" for="flexRadioDefault1">
                  Medium
                </label>
              <% } %>
            </div>
            <div class="form-check">
              <% if (incidents.priority == "high") { %>
                <input class="form-check-input" type="radio" name="priority"
                id="flexRadioDefault1" value="low" checked >
                <label class="form-check-label" for="flexRadioDefault1">
                  High
                </label>
              <% } else { %>
                <input class="form-check-input" type="radio" name="priority"
                id="flexRadioDefault1" value="high" >
                <label class="form-check-label" for="flexRadioDefault1">
                  High
                </label>
              <% } %>
            </div>


          </div>
          


        </div>
        <% if (userType == "Administrator") { %>
          <div>
            <br>
          <label for="status">Change Ticket Status</label>
          <input list="statusList" id="status" name="status" >

          <datalist id="statusList">
            <option value="NEW"></option>
            <option value="OPEN"></option>
            <option value="IN PROGRESS"></option>
            <option value="CLOSED"></option>
          </datalist>
        </div>

        <% } else { %>
          <div>
            <br>
          <input type="text" name="status" value="<%= incidents.status %>" hidden>

        </div>

        <% } %>

        
        <input
          placeholder="Ticket Date"
          class="form-control"
          type="date"
          value=<%= incidents.recordNumber %>
          name="recordNumber"
          id = "recordNumber"
        />
      </div>

      <div class="col-xs-12 buttons">
        <div class="row g-2">
          <div class="col-xs-4 cancel">
            <button
              type="button"
              class="btn2"
              onclick="location.href = '/tickets';"
            >
              Cancel
            </button>
          </div>
          <div class="col-xs-8 submit">
            <button type="submit" class="btn">Submit</button>
          </div>
        </div>
      </div>
    </form>
  </div>
</div>
